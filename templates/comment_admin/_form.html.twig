{{  form_start(commentForm) }}
{# {{ form_widget(commentForm) }} #}
    {{ form_row(commentForm.name, {
                label:'Comment Name'
            }) }}
    {{ form_row(commentForm.comment)}}
    {{ form_row(commentForm.commentedAt,{
                label:'Commented At'
            } ) }}

    {{ form_row(commentForm.location, {
            attr: {
                'data-specific-location-url': path('admin_comment_location_select'),
                'class': 'js-comment-form-location'
            }
        }) }}

    <div class='js-specific-location-target'>
        {% if commentForm.specificlocationName is defined %}
            {{ form_row(commentForm.specificLocationName) }}
        {% endif %}
    </div>
    {{ form_row(commentForm.author) }}

    <button type='submit' class='btn btn-primary'>
        {{button_text}} </button>

{{  form_end(commentForm) }}
