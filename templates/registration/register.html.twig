{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                Register
            </h1>

            {{ form_start(registrationForm, {'attr': {'class': 'w-1/2 mx-auto'}}) }}
           
                <div class="mb-4">
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-input'}}) }}
                </div>
                <div class="mb-4">
                    {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-input'}}) }}
                </div>
                <div class="mb-6 flex items-center">
                    {{ form_row(registrationForm.agreeTerms,  {'label_attr': {'class': 'mr-2'}}) }}
                </div>

    
            
                <!-- CSRF Token -->
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
                <button 
                    type="submit" 
                    class="btn btn-info my-2 my-sm-0 ">
                    Register
                </button>

                
            
            {{ form_end(registrationForm) }}

        </div>
    </div>
{% endblock %}





